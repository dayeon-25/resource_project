{{>layout/header}}

<form method="post" action="/signup">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}">

    <div>
        <label for="username">아이디</label>
        <input type="text" id="username" name="username" value="{{signupRequest.username}}">
    </div>

    <div>
        <label for="password">비밀번호</label>
        <input type="password" id="password" name="password" value="{{signupRequest.password}}">
    </div>

    <div>
        <label for="name">이름</label>
        <input type="text" id="name" name="name" value="{{signupRequest.name}}">
    </div>

    <div>
        <label for="birthday">생년월일</label>
        <input type="date" id="birthday" name="birthday" value="birthday">
    </div>

    <div>
        <input type="radio" id="individual" name="userType" value="individual">
        <label for="individual">개인</label>

        <input type="radio" id="business" name="userType" value="business">
        <label for="business">사업자</label>
    </div>

    <div>
        <button type="submit">회원가입</button>
    </div>
</form>

{{#message}}
    <script>
        alert("{{message}}");
    </script>
{{/message}}


{{>layout/footer}}